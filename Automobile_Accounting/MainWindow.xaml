<Window x:Class="Automobile_Accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automobile_Accounting"
        mc:Ignorable="d"
        Title="Учет и реализация автомобилей" MinHeight="500" MinWidth="1000" Height="750" Width="1100" Icon="/Resource/avto.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Yellow"></Grid>
        <Grid Grid.Row="2" Background="Yellow"></Grid>
        <TextBlock Text="Учет и реализация автомобилей" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26" FontFamily="Segoe UI Variable Text Semibold"/>
        <TextBlock Name="TBlockRole" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe UI Variable Text Semibold" Visibility="Collapsed" Height="auto" Width="auto" Margin="0 0 20 50"/>
        <TextBlock Name="TBlockRoleName" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" FontFamily="Segoe UI Variable Text Semibold" Visibility="Collapsed" Height="auto" Width="auto" Margin="0 0 20 20"/>
        <Button Content="Выйти" Name="BtnExit" Click="BtnExit_Click"  Grid.Row="0" Height="20" Width="60" FontSize="12" FontFamily="Segoe UI Variable Text Semibold" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 20 20 0" Background="Yellow" BorderBrush="Black" Foreground="Black" Visibility="Collapsed"/>
        <Image Source="/Resource/avto.png" HorizontalAlignment="Left" Margin="30 0 0 0" Width="auto"/>
        <Frame x:Name="FrameNavigatin" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="2"></Frame>
    </Grid>
</Window>
