<Page x:Class="Automobile_Accounting.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automobile_Accounting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2" Background="Yellow"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
            <StackPanel Margin="0 -20 0 0">
                <TextBlock Text="Редактирование автомобиля:" HorizontalAlignment="Center" FontFamily="Segoe UI Variable Text Semibold" FontSize="20" Margin="0 0 45 10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ID номер автомобиля: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxID" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="109 0 0 10" MinWidth="30"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Серийнный номер: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxSerrialNum" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="39 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Бренд: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxBrend" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="122 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Модель: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxModel" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="111 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Комплектация: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxConfig" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="66 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Год выпуска: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxYear" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="141 0 0 10" MinWidth="60"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Тип кузова: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxkuzov" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="90 0 0 10" MinWidth="120" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Цвет: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxcolor" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="132 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Цена: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxprice" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="130 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Количество: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                    <TextBox Name="TBoxquantity" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="88 0 0 10" MinWidth="120"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click" HorizontalAlignment="Right" Width="110" Height="30" Margin="0 0 18 0" FontFamily="Segoe UI Variable Text Semibold" FontSize="16" BorderBrush="Black" Background="Yellow"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Button Content="Назад" Grid.Row="2" Name="BtnBack" Click="BtnBack_Click" HorizontalAlignment="Right" Width="90" Height="30" Margin="0 0 20 0" FontFamily="Segoe UI Variable Text Semibold" FontSize="16" BorderBrush="Black" Background="Yellow"/>
    </Grid>
</Page>
