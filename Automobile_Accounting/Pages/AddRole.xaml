<Page x:Class="Automobile_Accounting.Pages.AddRole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automobile_Accounting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRole">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
            <StackPanel>
                <StackPanel Margin="0 0 0 0">
                    <TextBlock Text="Добавления сотрудника:" HorizontalAlignment="Center" FontFamily="Segoe UI Variable Text Semibold" FontSize="20" Margin="0 0 0 40"/>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="ФИО сотрудника:" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" Width="120"/>
                        <TextBox Name="TBoxFIOEmployee" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="5 0 0 10" MinWidth="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Логин:" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" Width="120"/>
                        <TextBox Name="TBoxLoginEmployee" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="5 0 0 10" MinWidth="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Пароль:" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" Width="120"/>
                        <PasswordBox Name="TBoxPasswordEmployee" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="5 0 0 10" MinWidth="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Роль:" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" Width="120"/>
                        <ComboBox Name="ComboBoxRole" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="5 0 0 10" MinWidth="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10" Visibility="Collapsed">
                        <TextBlock Text="Имя:" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" Width="120"/>
                        <TextBox Name="TBoxName" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="5 0 0 10" MinWidth="150"/>
                    </StackPanel>
                    <StackPanel>
                        <Button Content="Добавить" Name="BtnSendAdd" Click="BtnSendAdd_Click" HorizontalAlignment="Right" Width="170" Height="30" Margin="0 0 18 0" FontFamily="Segoe UI Variable Text Semibold" FontSize="16" BorderBrush="Black" Background="Yellow"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="3" Background="Yellow"/>
        <Grid Grid.Row="0" Background="Yellow"/>
        <Button Content="Назад" Grid.Row="2" Name="BtnBack" Click="BtnBack_Click" HorizontalAlignment="Right" Width="90" Height="30" Margin="0 0 20 0" FontFamily="Segoe UI Variable Text Semibold" FontSize="16" BorderBrush="Black" Background="Yellow"></Button>
        <TextBlock Grid.Row="0" Text="Отправка заявки" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Segoe UI Variable Text Semibold"/>
    </Grid>
</Page>
