<Page x:Class="Automobile_Accounting.Pages.EditManPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Automobile_Accounting.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditManPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2" Background="Yellow"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
            <StackPanel>
                <StackPanel Margin="0 0 0 0">
                    <TextBlock Text="Редактирование Заявки:" HorizontalAlignment="Center" FontFamily="Segoe UI Variable Text Semibold" FontSize="20" Margin="0 0 45 10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Номер заявки: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxNumOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="183 0 0 10" MinWidth="31"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Дата заявки: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxDateOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="106 0 0 10" MinWidth="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Бренд автомобиля: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxBrendAvto" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="63 0 0 10" MinWidth="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Модель автомобиля: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxModelOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="52 0 0 10" MinWidth="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Конфигурация автомобиля: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxConfigOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="10 0 0 10" MinWidth="120" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="340 -157 0 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Цвет автомобиля: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxСolorOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="126 0 0 10" MinWidth="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Количество автомобилей: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxQuantityOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="132 0 0 10" MinWidth="60"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Общая сумма: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxSumOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="150 0 0 10" MinWidth="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Наименование партнера: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxPartnerOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="76 0 0 10" MinWidth="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ФИО партнера " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxIDParnerOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="66 0 0 10" MinWidth="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Скидка: " FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="0 0 0 0" />
                        <TextBox Name="TBoxDiscountOrder" FontFamily="Segoe UI Variable Text Semibold" FontSize="14" Margin="288 0 0 10" MinWidth="25"/>
                    </StackPanel>
                    <StackPanel>
                        <Button Content="Сохранить" Name="BtnSaveMan" Click="BtnSaveMan_Click" HorizontalAlignment="Right" Width="110" Height="30" Margin="0 10 0 0" FontFamily="Segoe UI Variable Text Semibold" FontSize="16" BorderBrush="Black" Background="Yellow"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Button Content="Назад" Grid.Row="2" Name="BtnBackMan" Click="BtnBackMan_Click" HorizontalAlignment="Right" Width="90" Height="30" Margin="0 0 20 0" FontFamily="Segoe UI Variable Text Semibold" FontSize="16" BorderBrush="Black" Background="Yellow"/>
    </Grid>
</Page>
